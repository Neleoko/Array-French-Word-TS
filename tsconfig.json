{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "target": "es2015",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "allowJs": true,
    "outDir": "dist",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}